<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Style x:Key="BackIconButtonStyle" TargetType="ui:Button">
        <Setter Property="Width" Value="{StaticResource IconButtonSize}" />
        <Setter Property="Height" Value="{StaticResource IconButtonSize}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="CornerRadius" Value="{StaticResource AppCornerRadius}" />
        <Setter Property="Appearance" Value="Transparent" />
        <Setter Property="MouseOverBackground" Value="{ui:ThemeResource ControlFillColorDefaultBrush}" />
        <Setter Property="PressedBackground" Value="{ui:ThemeResource ControlFillColorSecondaryBrush}" />
        <Setter Property="MouseOverBorderBrush" Value="Transparent" />
        <Setter Property="PressedBorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorPrimaryBrush}" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorDisabledBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
