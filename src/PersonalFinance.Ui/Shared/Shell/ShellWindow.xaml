<ui:FluentWindow x:Class="PersonalFinance.Ui.Shared.Shell.ShellWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:components="clr-namespace:PersonalFinance.Ui.Shared.Shell.Components"
                 xmlns:viewModels="clr-namespace:PersonalFinance.Ui.Shared.Shell.ViewModels"
                 xmlns:expenses="clr-namespace:PersonalFinance.Ui.Features.Expenses.Views"
                 xmlns:categories="clr-namespace:PersonalFinance.Ui.Features.Categories.Views"
                 xmlns:settings="clr-namespace:PersonalFinance.Ui.Features.Settings.Views"
                 Title="{DynamicResource App.Title}"
                 Width="1200"
                 Height="800"
                 ExtendsContentIntoTitleBar="True"
                 Background="{DynamicResource ApplicationBackgroundBrush}"
                 Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <ui:FluentWindow.DataContext>
        <viewModels:ShellViewModel />
    </ui:FluentWindow.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <components:AppTitleBar Grid.Row="0"
                                TitleText="{DynamicResource App.Title}"
                                IsBackEnabled="{Binding ElementName=NavigationView, Path=IsBackEnabled}"
                                BackCommand="{Binding BackCommand}" />
        <ui:NavigationView Grid.Row="1"
                           x:Name="NavigationView"
                           Background="{DynamicResource NavigationViewContentBackground}"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           PaneDisplayMode="LeftFluent"
                           IsPaneToggleVisible="False"
                           IsPaneOpen="True"
                           OpenPaneLength="100"
                           IsBackButtonVisible="Collapsed">
            <ui:NavigationView.Resources>
                <Style TargetType="{x:Type ui:NavigationViewItem}" BasedOn="{StaticResource NavigationViewItemDefaultStyle}">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" TextTrimming="None" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ui:NavigationView.Resources>
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="{DynamicResource Nav.Expenses}"
                                       TargetPageType="{x:Type expenses:ExpensesPage}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{Binding TargetPageType, RelativeSource={RelativeSource Self}}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Money24" FontSize="26" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="{DynamicResource Nav.Categories}"
                                       TargetPageType="{x:Type categories:CategoriesPage}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{Binding TargetPageType, RelativeSource={RelativeSource Self}}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Tag24" FontSize="26" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="{DynamicResource Nav.Settings}"
                                       TargetPageType="{x:Type settings:SettingsPage}"
                                       Command="{Binding NavigateCommand}"
                                       CommandParameter="{Binding TargetPageType, RelativeSource={RelativeSource Self}}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" FontSize="26" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
