<UserControl x:Class="PersonalFinance.Ui.Shared.Shell.Components.AppTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <ui:TitleBar Padding="0" Margin="6, 2, 0, 0">
        <ui:TitleBar.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:Button Grid.Column="0"
                           Width="40"
                           Height="40"
                           Margin="0, 0, 6, 0"
                           BorderThickness="0"
                           CornerRadius="8"
                           Appearance="Transparent"
                           ToolTipService.ToolTip="{DynamicResource Common.Back}"
                           Command="{Binding BackCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           IsEnabled="{Binding IsBackEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="16" />
                    </ui:Button.Icon>

                    <ui:Button.Template>
                        <ControlTemplate TargetType="ui:Button">
                            <Border x:Name="Root"
                                    Background="Transparent"
                                    CornerRadius="{TemplateBinding CornerRadius}">
                                <ContentPresenter Content="{TemplateBinding Icon}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Root" Property="Background" Value="Transparent" />
                                    <Setter Property="Opacity" Value="0.45" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root"
                                            Property="Background"
                                            Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ui:Button.Template>
                </ui:Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <ui:SymbolIcon Symbol="Wallet24" FontSize="18" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </ui:TitleBar.Header>
    </ui:TitleBar>
</UserControl>