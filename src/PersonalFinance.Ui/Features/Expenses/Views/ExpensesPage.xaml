<Page x:Class="PersonalFinance.Ui.Features.Expenses.Views.ExpensesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource Expenses.Title}">
    <Grid>
        <ui:Card Margin="24">
            <StackPanel>
                <TextBlock Text="{DynamicResource Expenses.Title}" FontSize="28" FontWeight="SemiBold" />
                <ui:Button Margin="0,16,0,0" Command="{Binding AddExpenseCommand}">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Add24" Margin="0,0,8,0" />
                        <TextBlock Text="{DynamicResource Expenses.Add}" />
                    </StackPanel>
                </ui:Button>
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>
