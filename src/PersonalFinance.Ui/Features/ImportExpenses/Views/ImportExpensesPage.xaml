<Page x:Class="PersonalFinance.Ui.Features.ImportExpenses.Views.ImportExpensesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      Title="{DynamicResource ImportExpenses.Title}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{DynamicResource ImportExpenses.Title}"
                               Style="{StaticResource PageTitleTextStyle}" />
                    <TextBlock Text="{DynamicResource ImportExpenses.Subtitle}"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Grid>

            <ui:Card Grid.Row="1" Margin="0,16,0,0" Padding="16"
                     AllowDrop="True"
                     DragEnter="OnDragEnter"
                     DragLeave="OnDragLeave"
                     DragOver="OnDragOver"
                     Drop="OnDrop">
                <ui:Card.Style>
                    <Style TargetType="ui:Card">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSetupRequired}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Card.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0"
                          Margin="0,4,0,0"
                          AllowDrop="True"
                          Background="Transparent"
                          DragEnter="OnDragEnter"
                          DragLeave="OnDragLeave"
                          DragOver="OnDragOver"
                          Drop="OnDrop">
                        <Rectangle RadiusX="10" RadiusY="10"
                                   StrokeThickness="1.5"
                                   StrokeDashArray="6 4"
                                   Fill="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Stroke" Value="{DynamicResource TextFillColorSecondaryBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                                            <Setter Property="Stroke" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>
                        <Border Margin="10" Padding="8"
                                BorderThickness="0"
                                CornerRadius="8"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource ImportExpenses.DropTitle}"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center" />
                                <TextBlock Text="{DynamicResource ImportExpenses.DropHint}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"
                                       TextAlignment="Center" />
                                <TextBlock Text="Você também pode clicar para selecionar um arquivo."
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,8,0,0"
                                       TextAlignment="Center" />
                                <ui:Button Margin="0,8,0,0"
                                       HorizontalAlignment="Center"
                                       Command="{Binding PickFileCommand}"
                                       Content="{DynamicResource ImportExpenses.SelectFile}"
                                       Icon="{ui:SymbolIcon ArrowUpload24}" />
                                <TextBlock Text="{Binding SelectedFileName}" Margin="0,8,0,0" TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedFileName}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </ui:Card>

            <ui:Card Grid.Row="1" Margin="0,16,0,0" Padding="16"
                     Visibility="{Binding IsSetupRequired, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource ImportExpenses.SetupTitle}" FontWeight="SemiBold" />
                    <TextBlock Text="{DynamicResource ImportExpenses.SetupSubtitle}"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,12" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="{DynamicResource ImportExpenses.SetupOcrLanguage}" VerticalAlignment="Center" Margin="0,0,8,0" />
                        <ComboBox MinWidth="160"
                                  ItemsSource="{Binding OcrLanguageOptions}"
                                  DisplayMemberPath="DisplayName"
                                  SelectedItem="{Binding SelectedOcrLanguage, Mode=TwoWay}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding SetupItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                        <ProgressBar Height="6" Margin="0,6,0,0" Value="{Binding Progress}" Maximum="100" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0"
                                               Text="{Binding Progress, StringFormat={}{0}%}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <ui:Button Style="{StaticResource PrimaryActionButtonStyle}"
                                   Command="{Binding DownloadSetupCommand}"
                                   IsEnabled="{Binding CanDownloadSetup}"
                                   Content="{DynamicResource ImportExpenses.SetupDownload}" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <ui:Card Grid.Row="2"
                     Margin="0,16,0,0"
                     Padding="16"
                     VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="260" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="{DynamicResource ImportExpenses.DateHeader}"
                                   FontWeight="SemiBold" 
                                   Margin="6,0,0,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="{DynamicResource ImportExpenses.DescriptionHeader}"
                                   FontWeight="SemiBold"
                                   Margin="6,0,0,0"/>
                        <TextBlock Grid.Column="2"
                                   Text="{DynamicResource ImportExpenses.AmountHeader}"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,18,0" />
                        <TextBlock Grid.Column="3"
                                   Text="{DynamicResource ImportExpenses.CategoryHeader}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,6,0" />
                        <TextBlock Grid.Column="4"
                                   Text="{DynamicResource ImportExpenses.ConfidenceHeader}"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <ui:ListView ItemsSource="{Binding Items}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ui:ListView.ItemContainerStyle>
                                <Style TargetType="ui:ListViewItem" BasedOn="{StaticResource {x:Type ui:ListViewItem}}">
                                    <Setter Property="Padding" Value="6,4" />
                                    <Setter Property="Margin" Value="0,0,0,6" />
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                </Style>
                            </ui:ListView.ItemContainerStyle>
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="140" />
                                            <ColumnDefinition Width="260" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    Margin="0,0,6,0"
                                                    SelectedDate="{Binding DateValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    VerticalAlignment="Center"
                                                    SelectedDateFormat="Short"/>
                                        <ui:TextBox Grid.Column="1"
                                                    Margin="0,0,6,0"
                                                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    VerticalContentAlignment="Center" />
                                        <ui:TextBox Grid.Column="2"
                                                    Margin="0,0,6,0"
                                                    Text="{Binding AmountText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                    TextAlignment="Right"
                                                    HorizontalContentAlignment="Right"
                                                    VerticalContentAlignment="Center" />
                                        <ComboBox Grid.Column="3"
                                                  Margin="0,0,6,0"
                                                  VerticalAlignment="Center"
                                                  ItemsSource="{Binding DataContext.CategoryOptions, RelativeSource={RelativeSource AncestorType=Page}}"
                                                  DisplayMemberPath="DisplayName"
                                                  SelectedValuePath="Id"
                                                  SelectedValue="{Binding SelectedCategoryId, Mode=TwoWay}" />
                                        <TextBlock Grid.Column="4" Text="{Binding ConfidenceText}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConfidenceLow}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource SystemFillColorCautionBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>

                        <TextBlock Text="{DynamicResource ImportExpenses.EmptyHint}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasItems}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <Border Grid.Row="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            Padding="0,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="Total" FontWeight="SemiBold" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2"
                                       Text="{Binding TotalAmountText}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                        </Grid>
                    </Border>
                </Grid>
            </ui:Card>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <ui:Button Command="{Binding ClearCommand}"
                           Content="{DynamicResource ImportExpenses.Clear}" />
                <ui:Button Style="{StaticResource PrimaryActionButtonStyle}"
                           Command="{Binding ConfirmCommand}"
                           Content="{DynamicResource ImportExpenses.Confirm}"
                           Margin="8,0,0,0" />
            </StackPanel>

            <Grid Grid.RowSpan="4"
                  Background="{DynamicResource ApplicationBackgroundBrush}"
                  Opacity="0.65"
                  Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Panel.ZIndex="10">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:ProgressRing Width="32" Height="32" IsIndeterminate="True" />
                        <TextBlock Text="Processando..." Margin="0,8,0,0" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
