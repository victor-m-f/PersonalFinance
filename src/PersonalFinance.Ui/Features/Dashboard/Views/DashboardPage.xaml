<Page x:Class="PersonalFinance.Ui.Features.Dashboard.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:oxy="http://oxyplot.org/wpf"
      Title="{DynamicResource Dashboard.Title}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding HeaderTitle}" Style="{StaticResource PageTitleTextStyle}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:ProgressRing Width="18" Height="18" IsIndeterminate="True" Margin="0,0,12,0"
                                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock Text="{DynamicResource Dashboard.PeriodLabel}" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,8,0" />
                    <ComboBox Width="140"
                              ItemsSource="{Binding Months}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding SelectedMonth}" />
                    <ComboBox Width="90" Margin="8,0,0,0"
                              ItemsSource="{Binding Years}"
                              SelectedItem="{Binding SelectedYear}" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ui:Card Grid.Column="0" Padding="16" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard.TotalSpent}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" />
                        <TextBlock Text="{Binding TotalSpentText}" FontSize="22" FontWeight="SemiBold" />
                    </StackPanel>
                </ui:Card>

                <ui:Card Grid.Column="1" Padding="16" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard.PeriodChange}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" />
                        <TextBlock Text="{Binding PeriodChangeText}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" />
                    </StackPanel>
                </ui:Card>

                <ui:Card Grid.Column="2" Padding="16" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard.DailyAverage}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" />
                        <TextBlock Text="{Binding DailyAverageText}" FontSize="22" FontWeight="SemiBold" />
                    </StackPanel>
                </ui:Card>

                <ui:Card Grid.Column="3" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Dashboard.ExpensesCount}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" />
                        <TextBlock Text="{Binding ExpensesCountText}" FontSize="22" FontWeight="SemiBold" />
                    </StackPanel>
                </ui:Card>
            </Grid>

            <ui:Card Grid.Row="2" Padding="16" Margin="0,16,0,0" VerticalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     VerticalContentAlignment="Stretch">
                <DockPanel LastChildFill="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <TextBlock Text="{DynamicResource Dashboard.CategoryBreakdown}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="0"
                               DockPanel.Dock="Top" />
                    <Grid Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <oxy:PlotView Model="{Binding CategoryChartModel}"
                                      Height="360"
                                      Width="560"
                                      Background="Transparent"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        <TextBlock Text="{DynamicResource Dashboard.NoData}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasCategoryData}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </DockPanel>
            </ui:Card>

            <ui:Card Grid.Row="3" Padding="16" Margin="0,16,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{DynamicResource Dashboard.RecentExpenses}" FontSize="16" FontWeight="SemiBold" />
                    <Grid Grid.Row="1" Margin="0,12,0,0">
                        <ui:ListView ItemsSource="{Binding RecentExpenses}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ui:ListView.ItemContainerStyle>
                                <Style TargetType="ui:ListViewItem" BasedOn="{StaticResource {x:Type ui:ListViewItem}}">
                                    <Setter Property="Padding" Value="8,6" />
                                    <Setter Property="Margin" Value="0,0,0,6" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ui:ListView.ItemContainerStyle>
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding DateText}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="1" Text="{Binding DescriptionText}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Rectangle Width="12" Height="12" RadiusX="2" RadiusY="2" Margin="0,0,6,0"
                                                       Fill="{Binding CategoryColorHex, Converter={StaticResource ColorHexToBrushConverter}}" />
                                            <TextBlock Text="{Binding CategoryText}" VerticalAlignment="Center" />
                                        </StackPanel>
                                        <TextBlock Grid.Column="3" Text="{Binding AmountText}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>
                        <TextBlock Text="{DynamicResource Dashboard.NoData}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasRecentExpenses}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
