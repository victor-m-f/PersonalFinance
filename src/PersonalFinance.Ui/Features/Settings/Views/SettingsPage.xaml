<Page x:Class="PersonalFinance.Ui.Features.Settings.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:components="clr-namespace:PersonalFinance.Ui.Features.Settings.Components"
    Title="{DynamicResource Settings.Title}">
    <Grid>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{DynamicResource Settings.Title}" FontSize="28" FontWeight="SemiBold" />
            <TextBlock Grid.Row="1" Text="{DynamicResource Settings.AppearanceAndBehavior}" Margin="0,24,0,12" FontSize="16" FontWeight="SemiBold" />
            <components:ThemeSettingsControl Grid.Row="2" />
            <components:LanguageSettingsControl Grid.Row="3" />
            <components:LoggingSettingsControl Grid.Row="4" />
            <components:ImportSettingsControl Grid.Row="5" />
        </Grid>
    </Grid>
</Page>
