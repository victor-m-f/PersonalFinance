<Page x:Class="PersonalFinance.Ui.Views.Pages.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Settings">
    <Grid>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Settings" FontSize="28" FontWeight="SemiBold" />
            <TextBlock Grid.Row="1" Text="Appearance &amp; behaviour" Margin="0,24,0,12" FontSize="16" FontWeight="SemiBold" />
            <ui:Card Grid.Row="2" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon Glyph="&#xE790;" FontFamily="{DynamicResource SegoeFluentIcons}" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="App theme" FontWeight="SemiBold" />
                        <TextBlock Text="Select which app theme to display" Opacity="0.7" Margin="0,4,0,0" />
                    </StackPanel>
                    <ComboBox x:Name="ThemeComboBox"
                              Grid.Column="2"
                              MinWidth="160"
                              VerticalAlignment="Center"
                              SelectionChanged="ThemeComboBox_OnSelectionChanged">
                        <ComboBoxItem Content="System Default" Tag="System" />
                        <ComboBoxItem Content="Light" Tag="Light" />
                        <ComboBoxItem Content="Dark" Tag="Dark" />
                    </ComboBox>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
