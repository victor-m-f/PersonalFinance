<ui:FluentWindow x:Class="PersonalFinance.Ui.Views.ShellWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:pages="clr-namespace:PersonalFinance.Ui.Views.Pages"
                 Title="PersonalFinance"
                 Width="1200"
                 Height="800"
                 ExtendsContentIntoTitleBar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar Title="" Padding="0" Margin="6, 6, 0, 0">
            <ui:TitleBar.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Button Grid.Column="0"
                               Width="50"
                               BorderThickness="0"
                               Background="Transparent"
                               CornerRadius="8"
                               Click="OnBackClicked"
                               Appearance="Transparent"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               MouseOverBackground="{ui:ThemeResource ControlFillColorDefaultBrush}"
                               PressedBackground="{ui:ThemeResource ControlFillColorSecondaryBrush}"
                               IsEnabled="{Binding ElementName=NavigationView, Path=IsBackEnabled}">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="16" />
                        </ui:Button.Icon>
                    </ui:Button>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="16,0,0,0">
                        <ui:SymbolIcon Symbol="Wallet24" FontSize="18" Margin="0,0,6,0" />
                        <TextBlock Text="PersonalFinance" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </ui:TitleBar.Header>
        </ui:TitleBar>
        <ui:NavigationView Grid.Row="1"
                           x:Name="NavigationView"
                           PaneDisplayMode="LeftFluent"
                           IsPaneToggleVisible="False"
                           IsPaneOpen="True"
                           CompactPaneLength="72"
                           OpenPaneLength="72"
                           IsBackButtonVisible="Collapsed"
                           SelectionChanged="OnNavigationSelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Expenses" TargetPageType="{x:Type pages:ExpensesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Money24" FontSize="22" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Categories" TargetPageType="{x:Type pages:CategoriesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Tag24" FontSize="22" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" TargetPageType="{x:Type pages:SettingsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" FontSize="22" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
