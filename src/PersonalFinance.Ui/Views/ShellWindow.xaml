<ui:FluentWindow x:Class="PersonalFinance.Ui.Views.ShellWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:pages="clr-namespace:PersonalFinance.Ui.Views.Pages"
                 Title="PersonalFinance"
                 Width="1200"
                 Height="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Padding="12,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ui:Button Click="OnBackClicked" Appearance="Transparent" Padding="6,4">
                    <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="18" />
                </ui:Button>
                <ui:SymbolIcon Symbol="Wallet24" FontSize="18" Margin="8,0,6,0" />
                <TextBlock Text="PersonalFinance" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" />
            </StackPanel>
        </Border>
        <ui:NavigationView Grid.Row="1"
                           x:Name="NavigationView"
                           PaneDisplayMode="Left"
                           IsPaneToggleVisible="False"
                           IsPaneOpen="True"
                           CompactPaneLength="72"
                           OpenPaneLength="72"
                           IsBackButtonVisible="Collapsed"
                           ItemInvoked="OnNavigationItemInvoked"
                           SelectionChanged="OnNavigationSelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem TargetPageType="{x:Type pages:ExpensesPage}">
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Money24" FontSize="20" />
                            <TextBlock Text="Expenses" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem TargetPageType="{x:Type pages:CategoriesPage}">
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Tag24" FontSize="20" />
                            <TextBlock Text="Categories" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem TargetPageType="{x:Type pages:SettingsPage}">
                    <ui:NavigationViewItem.Content>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="20" />
                            <TextBlock Text="Settings" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </ui:NavigationViewItem.Content>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
