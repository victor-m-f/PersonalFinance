<UserControl x:Class="PersonalFinance.Ui.Views.Shell.Components.AppTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <ui:TitleBar Title=""
                 Padding="0"
                 Background="{DynamicResource ApplicationBackgroundBrush}"
                 Foreground="{DynamicResource TextFillColorPrimaryBrush}">
        <ui:TitleBar.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:Button Grid.Column="0"
                           Width="50"
                           BorderThickness="0"
                           Background="Transparent"
                           CornerRadius="8"
                           Click="OnBackClick"
                           Appearance="Transparent"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           MouseOverBackground="{DynamicResource ControlFillColorDefaultBrush}"
                           PressedBackground="{DynamicResource ControlFillColorSecondaryBrush}"
                           IsEnabled="{Binding IsBackEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="16" />
                    </ui:Button.Icon>
                </ui:Button>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <ui:SymbolIcon Symbol="Wallet24" FontSize="18" Margin="0,0,6,0" />
                    <TextBlock Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </ui:TitleBar.Header>
    </ui:TitleBar>
</UserControl>