<ui:FluentWindow x:Class="PersonalFinance.Ui.Views.Shell.ShellWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:components="clr-namespace:PersonalFinance.Ui.Views.Shell.Components"
                 xmlns:expenses="clr-namespace:PersonalFinance.Ui.Views.Pages.Expenses"
                 xmlns:categories="clr-namespace:PersonalFinance.Ui.Views.Pages.Categories"
                 xmlns:settings="clr-namespace:PersonalFinance.Ui.Views.Pages.Settings"
                 Title="PersonalFinance"
                 Width="1200"
                 Height="800"
                 ExtendsContentIntoTitleBar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <components:AppTitleBar Grid.Row="0"
                                TitleText="PersonalFinance"
                                IsBackEnabled="{Binding ElementName=NavigationView, Path=IsBackEnabled}"
                                BackRequested="OnBackRequested" />
        <ui:NavigationView Grid.Row="1"
                           x:Name="NavigationView"
                           PaneDisplayMode="LeftFluent"
                           IsPaneToggleVisible="False"
                           IsPaneOpen="True"
                           CompactPaneLength="72"
                           OpenPaneLength="72"
                           IsBackButtonVisible="Collapsed"
                           SelectionChanged="OnNavigationSelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Expenses" TargetPageType="{x:Type expenses:ExpensesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Money24" FontSize="22" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Categories" TargetPageType="{x:Type categories:CategoriesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Tag24" FontSize="22" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" TargetPageType="{x:Type settings:SettingsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" FontSize="22" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
